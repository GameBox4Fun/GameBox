<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.naccl.gamebox">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络权限 -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- 震动权限 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 摄像头权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera.autofocus" /> <!-- 自动聚焦权限 -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name="top.naccl.gamebox.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="top.naccl.gamebox.activity.LoginActivity"></activity>
        <activity android:name="top.naccl.gamebox.activity.RegisterActivity"></activity>
        <activity android:name="top.naccl.gamebox.activity.SettingActivity"></activity>
        <activity android:name="top.naccl.gamebox.activity.ArticleActivity"></activity>
        <activity android:name="top.naccl.gamebox.activity.MeUpdateActivity"></activity>
        <activity android:name="top.naccl.gamebox.activity.HomeActivity"></activity>
        <activity android:name="top.naccl.gamebox.activity.MeLoginActivity"></activity>
        <activity android:name="top.naccl.gamebox.activity.FavoriteActivity"></activity>
        <activity android:name="top.naccl.gamebox.qrcode.activity.CaptureActivity"></activity>
    </application>

</manifest>