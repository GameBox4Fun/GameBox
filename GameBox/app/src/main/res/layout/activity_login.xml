<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity">

    <TextView
            android:id="@+id/loginlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="127dp"
            android:text="用户名/密码登录"
            android:textColor="#0E0E0E"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/editText_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="用户名"
            android:inputType="text"
            android:maxLength="10"
            android:textColor="#205066"
            android:textColorHint="#8F8F8F"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/loginlogo"
            app:layout_constraintTop_toBottomOf="@+id/loginlogo" />

    <EditText
            android:id="@+id/editText_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColorHint="#8F8F8F"
            app:layout_constraintStart_toStartOf="@+id/editText_username"
            app:layout_constraintTop_toBottomOf="@+id/editText_username" />

    <Button
            android:id="@+id/button_login"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape"
            android:text="登    录"
            android:textColor="#FFFFFF"
            android:textColorHint="#D88888"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_password" />

    <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="注册"
            android:textColor="#8C8C8C"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/button_login"
            app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="GameBox"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:id="@+id/button_return"
            android:layout_width="36dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/arrow_go_back"
            app:layout_constraintEnd_toStartOf="@+id/loginlogo"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>